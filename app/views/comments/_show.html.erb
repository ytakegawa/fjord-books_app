<h2><strong><%= t('comments.content_show') %></strong></h2>
<% if comments.present? %>
<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:content) %></th>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.created_at.to_s(:datetime_jp) %></td>
      <% user = User.find(comment.user_id)%>
      <td><%= user.name %></td>
      <% if comment.user_id == current_user.id%>
      <td>
        <%= link_to t('views.common.destroy'), report_comment_path(comment.commentable_id, comment.id ), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      </td>
      <% end %>
      <br>
      <% end %>
    </tr>
</table>
<%= paginate comments%>
<% else %>
<strong><%= t('comments.content_nothing') %></strong>
<% end %>
