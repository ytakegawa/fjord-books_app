<section class="user_info">
  <% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize_to_fill: [100, 100])%>
  <% end%>
  <h1><%= @user.name %></h1>
  <span><%= link_to t("follow.view_my_profile"), @user %></span>
</section>
<section class="stats">
  <%= render 'shared/stats' %>
  <% if @users.any? %>
  <div class="user_avatars">
    <h2><%= @title %></h2>
    <% @users.each do |user| %>
    <% user_avatar = image_tag user.avatar.variant(resize_to_fill: [50, 50])%>
    <%= link_to user_avatar, user %>
    <%= user.name%>
    <br>
    <% end %>
  </div>
  <% end %>
</section>
<%= paginate @users %>
