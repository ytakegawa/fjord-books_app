<section class="user_info">
  <% if @user.avatar.attached? %>
  <%= image_tag @user.avatar.variant(resize_to_fill: [100, 100])%>
  <% end%>
  <h1><%= @user.name %></h1>
  <span><%= link_to t("follow.view_my_profile"), @user %></span>
</section>
<section class="stats">
  <%= render 'shared/stats' %>
  <% if @users.any? %>
  <div class="user_avatars">
    <h2><%= @title %></h2>
    <% @users.each do |user| %>
    <% if user.avatar.attached? %>
    <%= image_tag user.avatar.variant(resize_to_fill: [50, 50])%>
    <% end%>
    <%= link_to user.name, user %>
    <br>
    <% end %>
  </div>
  <% end %>
</section>
<%= paginate @users %>
<%= link_to t('views.common.back'), users_path %>
