<h1><%= User.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:postal_code) %></th>
      <th><%= User.human_attribute_name(:adress) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.postal_code %></td>
      <td><%= user.adress %></td>
      <% if user.id == current_user.id%>
      <td><%= link_to t('views.common.show'), user_profile_path(user) %></td>
      <td><%= link_to t('views.common.edit'), edit_user_registration_path(user) %></td>
      <td>
        <%= link_to t('views.common.destroy'), user_profile_path(user), method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
