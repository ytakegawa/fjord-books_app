<p id="notice"><%= notice %></p>

<h1><%= t_attr('books') %></h1>

<table>
  <thead>
    <tr>
      <% columns = ['title', 'memo', 'author', 'picture'] %>
      <% columns.each do |column| %>
      <th><%= t_attr(column) %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.memo %></td>
      <td><%= book.author %></td>
      <td><%= book.picture %></td>
      <td><%= link_to t('buttom.show'), book %></td>
      <td><%= link_to t('buttom.edit'), edit_book_path(book) %></td>
      <td><%= link_to t('buttom.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttom.new'), new_book_path %>
