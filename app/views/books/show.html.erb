<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @content.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @content.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @content.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@content.picture_url) if @content.picture.present? %>
</p>
<br>
<%= render 'comments/show', comments: @comments, commentable_type: @content %>
<br>
<%= render 'comments/form', comment: @comment, commentable_type: @content, error_comment: @error_comment %>
<br>
<%= link_to t('views.common.edit'), edit_book_path(@content) %> |
<%= link_to t('views.common.back'), books_path %>
