<% flash.each do |message_type, message| %>
<%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
<% end %>
<p class="navbar-text pull-right">
  <% if user_signed_in? %>
  <%= t('logged_in_name') %> <strong><%= current_user.name %></strong>.
  <%= link_to t('link.books_list'), books_path, class: 'navbar-link' %> |
  <%= link_to t('link.users_list'), users_path, class: 'navbar-link' %> |
  <%= link_to t('link.edit profile'), edit_user_registration_path, class: 'navbar-link' %> |
  <%= link_to t('link.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
  <% else %>
  <%= link_to t('devise.sessions.new.sign_in'), new_user_session_path, class: 'navbar-link'  %> |
  <%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path, class: 'navbar-link'  %>
  <% end %>
</p>
