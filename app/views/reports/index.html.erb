<h1><%= "#{@user.name} の #{Report.model_name.human}" %></h1>
<% if current_user == @user %>
<strong><%= link_to t('views.common.new'), new_report_path %></strong>
<% end %>
<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td><%= report.created_at %></td>
      <td><%= link_to t('views.common.show'), report %></td>
      <% if current_user == @user %>
      <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
      <td>
        <%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @reports%>
<%= link_to t('views.common.back'), @user %>
