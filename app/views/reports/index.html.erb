<h1><%= "#{@user.name} の #{Report.model_name.human}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td><%= report.created_at %></td>
      <td><%= link_to t('views.common.show'), report %></td>
      <td><%= link_to t('views.common.edit'), edit_user_report_path(report) %></td>
      <td>
        <%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
